<h1><%= @topic.title %></h1>
<%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-success' %>
<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
<% @topic.bookmarks.each do |bookmark| %>
  <h3><%= bookmark.url %>
<% end %>
